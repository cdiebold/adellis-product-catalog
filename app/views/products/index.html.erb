<div class='container'>
  <h1>Product Page</h1>
  <div class='row'>
    <div class='col-md-2'></div>
    <div class='col'>
      <%= form_tag "#", method: :get, id: "product-search-form" do %>
      <div class="input-group md-form form-sm form-2 pl-0">
        <%= text_field_tag :product , params[:product], placeholder: "Press enter to search",
          class: "form-control my-0 py-1 lime-border" %>

          <div class="input-group-append">
              <span class="input-group-text lime lighten-2" id="basic-text1">
                <i class="fa fa-search text-grey" aria-hidden="true"></i>
              </span>
            </div>
      </div>
      <% end %>
    </div>
    <div class='col-md-3'></div>
  </div>
</div>
<br/>
<div class='row'>
  <div class='col'>
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">NSN</th>
          <th scope="col">Name</th>
          <th scope="col">Part Number</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |p|  %>
          <tr>
            <td><%= p.nsn %></td>
            <td><%= p.name %></td>
            <td><%= p.part_number %></td>
            <td><%= link_to 'Details', 
                {controller: 'products',
                action: 'show',
                nsn: p.nsn,
                part_number: p.part_number},
                class: 'btn btn-secondary' 
                %></td>
          </tr>
       <% end %>
      </tbody>
    </table>
    </div>

  </div>
  <div class='row'>
    <div class='col-md-4'>
      <div class="btn-group" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-secondary">25</button>
        <button type="button" class="btn btn-secondary">50</button>
        <button type="button" class="btn btn-secondary">100</button>
      </div>
    </div>
    <div class='col-md-8'>
      <%== pagy_nav_compact_bootstrap(@pagy) %>
    </div>
  </div>
